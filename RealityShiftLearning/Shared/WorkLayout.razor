@inherits LayoutComponentBase

@inject NavigationManager NavigationManager

<Layout Class="mw-layout">
    <Content>
        @Body
    </Content>
    <Footer Class="mw-footer">
        <Menu
              Mode="MenuMode.Horizontal"
              Theme="MenuTheme.Light">
            <MenuItem Class="mw-menu-item" Key="1">
                <Icon Style="display: block; margin: 0" Type="bell" Theme="outline"></Icon>
                <span Style="display: block; text-align: center">Notifications</span>
            </MenuItem>
            <MenuItem Class="mw-menu-item" Key="2" @onclick="ToTasks">
                <Icon Style="display: block; margin: 0" Type="file-done" Theme="outline"></Icon>
                <span Style="display: block; text-align: center">Tasks</span>
            </MenuItem>
            <MenuItem Class="mw-menu-item" Key="3">
                <Icon Style="display: block; margin: 0" Type="line-chart" Theme="outline"></Icon>
                <span Style="display: block; text-align: center">Progress</span>
            </MenuItem>
        </Menu>
    </Footer>
</Layout>

<style>
    .mw-layout {
        height: 100vh;
        width: 100vw;
    }

    .mw-footer {
        padding: 0;
    }

        .mw-footer > ul {
            padding: 10px 0 20px;
            display: grid;
            grid-template-columns: 33% 33% 33%;
        }

    .mw-menu-item {
        grid-row: 1;
    }
</style>

@code {
    void ToTasks()
    {
        NavigationManager.NavigateTo("/kanban");
    }
}
