@page "/tomato/{Id:int}/overview"
@inject NavigationManager nav
@inject RealityShiftLearning.Services.TimerService Timer
@layout EmptyLayout

@inject LearnDbContext dbContext

<div class="mw-containter mw-tomato-working">
    <div class="mw-bg-waves">
        <img class="mw-bg-waves-img" />
    </div>

    <div class="mw-tomatoPage-topper" @onclick='() => nav.NavigateTo($"/kanban")'>

        <div class="mw-subheader"><img class="mw-backBtn" /> Tasks</div>
    </div>

    <div class="mw-tomatoPage-header">
        <div class="mw-content-item-iconSquare met-t"></div> Tomato counter
        <div class="mw-text">
            You work without distractions for 20 minutes and then rest for 5. After 4 tomatoes, you have a 10 minute break.<br><br>

            If anything interrupts you - a thought or a message, write it down to a notebook and react in a break.
        </div>



    </div>

    <img class="mw-tomatoPage-tomato" />

    <div class="mw-tomatoPage-copyLink">
        <div class="mw-tomatoPage-copyLink-label">
            Open task page in browser:
        </div>
        <Search Value="@exercise.ResourceLink" Size="@InputSize.Default" EnterButton="@("Copy link")" />
    </div>





    <div class="mw-tomatoPage-footer">
        <div class="mw-tomatoPage-footer-item big">
            <Button @onclick='() => { nav.NavigateTo($"/tomato/{exercise.Id}/working"); }' Type="primary" Size="large">Begin tomato</Button>
        </div>
        <div class="mw-tomatoPage-footer-item tr">
            <Button @onclick='() => { nav.NavigateTo($"/tomato/{exercise.Id}/hardToStart"); }' Type="link" Size="large">Too hard to begin?</Button>
        </div>
    </div>

</div>


